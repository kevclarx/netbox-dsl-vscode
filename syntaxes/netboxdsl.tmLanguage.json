{
    "name": "Netbox DSL",
    "scopeName": "source.netboxdsl",
    "fileTypes": ["ndsl"],
    "patterns": [
      {
        "include": "#comments"
      },
      {
        "include": "#entities"
      },
      {
        "include": "#strings"
      },
      {
        "include": "#brackets"
      }
    ],
    "repository": {
      "comments": {
        "patterns": [
          {
            "name": "comment.line.double-slash.netboxdsl",
            "match": "//.*$"
          },
          {
            "name": "comment.block.netboxdsl",
            "begin": "/\\*",
            "end": "\\*/"
          }
        ]
      },
      "entities": {
        "patterns": [
          {
            "name": "entity.key.netboxdsl",
            "match": "\\b(\\w+)\\b(?=\\s*:)"
          },
          {
            "name": "entity.value.netboxdsl",
            "match": "(?<=\\b\\w+\\b\\s*:\\s*)[^\\s]+"
          }
        ]
      },
      "strings": {
        "patterns": [
          {
            "name": "string.quoted.double.netboxdsl",
            "begin": "\"",
            "end": "\"",
            "patterns": [
              {
                "name": "constant.character.escape.netboxdsl",
                "match": "\\\\."
              }
            ]
          }
        ]
      },
      "brackets": {
        "patterns": [
          {
            "name": "punctuation.bracket.curly.netboxdsl",
            "match": "\\{|\\}"
          }
        ]
      }
    }
  }
  