{
  "name": "netboxdsl",
  "scopeName": "source.netboxdsl",
  "fileTypes": [".ndsl"],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#variable-declarations"
    },
    {
      "include": "#variables"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "match": "//.*$",
          "name": "comment"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "match": "\\b(sites|racks|devices)\\b",
          "name": "keyword"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "begin": "\"",
          "end": "\"",
          "name": "string"
        }
      ]
    },
    "variable-declarations": {
      "patterns": [
        {
          "match": "\\b\\w+\\s(?=\\{)",
          "name": "variable.declaration"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "match": "\\$\\w+",
          "name": "variable"
        }
      ]
    }
  }
}
